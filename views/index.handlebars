<h1>Burgers</h1>

<h2>Burgers not eaten</h2>
<ul>
    {{#each burgers}}
        {{#unless devoured}}
            
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers devoured</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
            
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>